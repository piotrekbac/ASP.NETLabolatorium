@model Lab0.Models.Publisher

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły Wydawcy</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Rok założenia
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstablishedYear)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PublisherId" class="btn btn-primary">Edytuj</a> |
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>