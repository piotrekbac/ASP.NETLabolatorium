@model List<Book>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Książki</h2>
<a class="btn btn-outline-primary" asp-controller="Book" asp-action="Create">Dodaj</a>
<h3>Lista</h3>

@if (Model.Count > 0)
{
    <table class="table">
        <thead> 
        <th>@Html.DisplayNameFor(model => model[0].Title)</th>
        <th>@Html.DisplayNameFor(model => model[0].Author)</th>
        <th>Akcje</th>
        </thead>
        <tbody>
        @{
            foreach (var obj in Model)
            {
                <td>@obj.Title</td> // ta właściwość jest dodawana do widocznej 
                <td>@obj.Author</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@obj.Id">Szczegóły</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@obj.Id">Edycja</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@obj.Id">Usuń</a>
                </td>
            }
        }
        </tbody>
        
    </table>
}
else
{
    <h3 class="text-danger">Brak kontaktów</h3>
}