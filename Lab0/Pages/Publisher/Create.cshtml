@model Lab0.Models.Publisher
@{ ViewData["Title"] = "Dodaj Wydawnictwo"; }

<h1>Dodaj Wydawnictwo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="EstablishedYear" class="control-label">Rok założenia</label>
                <input asp-for="EstablishedYear" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Zapisz</button>
        </form>
    </div>
</div>